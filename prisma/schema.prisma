generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Ad {
  id        String   @id @default(cuid())
  discount  String
  name      String
  date      String
  image     String   
  isActive  Boolean
  createdAt DateTime @default(now())
}

model Post {
  id          String      @id @default(cuid())
  name        String      
  description String    
  price       Float       
  createdAt   DateTime    @default(now())
  images      Image[]    
  restaurantId String?    
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
}

model Image {
  id        String   @id @default(cuid())
  url       String  
  postId    String  
  post      Post     @relation(fields: [postId], references: [id])
}

model Restaurant {
  id        String   @id @default(cuid())
  name      String   
  location  String   
  createdAt DateTime @default(now())
  posts     Post[]   
}
